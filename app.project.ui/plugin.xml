<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

  <extension point="org.eclipse.e4.workbench.model" id="modelContribution">
      <fragment uri="e4model/projectui.e4xmi"></fragment>
      <fragment
            uri="e4model/exml_maintenance.e4xmi">
      </fragment> 
        
   </extension>
    
    
     <extension point="org.modelio.app.preferences.preferencePages">
      <page
            id="org.modelio.app.project.ui.preferences"
            name="%Project.preferences"
            class="org.modelio.app.project.ui.prefs.ProjectPreferencesPage">
      </page>
   </extension>
     <extension
           point="org.eclipse.core.expressions.definitions">
        <definition
              id="app.project.ui.expression.isExmlFragment">
           <with
                 variable="org.eclipse.ui.selection">
              <iterate
                    ifEmpty="false"
                    operator="and">
                 <or>
                    <instanceof
                          value="org.modelio.gproject.fragment.exml.ExmlFragment">
                    </instanceof>
                    <instanceof
                          value="org.modelio.gproject.fragment.ramcfile.RamcFileFragment">
                    </instanceof>
                    <instanceof
                          value="org.modelio.gproject.fragment.ramcfile.MdaFragment">
                    </instanceof>
                    <instanceof
                          value="org.modelio.gproject.fragment.url.UrlFragment">
                    </instanceof>
                    <instanceof
                          value="com.modeliosoft.modelio.gproject.svn.fragment.SvnFragment">
                    </instanceof>
                 </or>
              </iterate>
           </with>
        </definition>
        <definition
              id="app.project.ui.expression.isProjectFragment">
           <with
                 variable="org.eclipse.ui.selection">
              <iterate
                    ifEmpty="false"
                    operator="and">
                 <or>
                    <instanceof
                          value="org.modelio.gproject.fragment.IProjectFragment">
                    </instanceof>
                 </or>
              </iterate>
           </with>
        </definition>
     </extension>
   
   
</plugin>
