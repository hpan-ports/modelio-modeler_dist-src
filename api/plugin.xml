<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.modelio.api.module.handlercontributor"
    name="Module handler contributor"
    schema="schema/org.modelio.api.module.contributor.exsd"/>
   <extension
         point="org.modelio.api.module.handlercontributor">

      <command-handler
            class="org.modelio.api.module.commands.ElementCreationStandardHandler"
            verb="ElementCreate">
      </command-handler>
      <command-handler
            class="org.modelio.api.module.commands.ElementCreationStandardHandler"
            verb="GenericElementCreationHandler">
      </command-handler>
      <command-handler
            class="org.modelio.api.module.commands.DiagramCreationStandardHandler"
            verb="GenericDiagramCreationHandler">
      </command-handler>
      <command-handler
            class="org.modelio.api.module.commands.DiagramCreationStandardHandler"
            verb="DiagramCreate">
      </command-handler>
      <command-handler
            class="org.modelio.api.module.commands.ApplyPatternStandardHandler"
            verb="PatternApply">
      </command-handler>
      <command-handler
            class="org.modelio.api.module.commands.RunJythonScriptStandardHandler"
            verb="RunJyScript">
      </command-handler>

      <diagram-tool
            class="org.modelio.api.diagram.tools.GenericBoxTool"
            verb="Box">
      </diagram-tool>
      <diagram-tool
            class="org.modelio.api.diagram.tools.GenericLinkTool"
            verb="Link">
      </diagram-tool>
      <diagram-tool
            class="org.modelio.api.diagram.tools.GenericAttachedBoxTool"
            verb="AttachedBox">
      </diagram-tool>
      <diagram-tool
            class="org.modelio.api.diagram.tools.GenericMultiLinkTool"
            verb="Multilink">
      </diagram-tool>

      <diagram-customizer
            class="org.modelio.api.diagram.DefaultDiagramCustomizer"
            verb="StandardCustomizer">
      </diagram-customizer>

      <wizard-contributor
            verb="GenericWizardContributor"
            class="org.modelio.api.ui.diagramcreation.GenericDiagramWizardContributor">
      </wizard-contributor>
   </extension>

</plugin>
